{
  "name": "exa-mcp-server",
  "version": "2.0.0",
  "description": "A Model Context Protocol server with Exa for web search, academic paper search, and Twitter/X.com search. Provides real-time web searches with configurable tool selection, allowing users to enable or disable specific search capabilities. Supports customizable result counts, live crawling options, and returns content from the most relevant websites. Now uses Nango for authentication.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exa-labs/exa-mcp-server.git"
  },
  "bin": {
    "exa-mcp-server": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "search mcp",
    "model context protocol",
    "exa",
    "search",
    "websearch",
    "claude",
    "ai",
    "research",
    "papers",
    "linkedin",
    "nango",
    "authentication"
  ],
  "author": "Exa Labs",
  "scripts": {
    "build": "npm run clean && npm run build:ts && npm run validate",
    "build:ts": "tsc",
    "clean": "rm -rf dist .smithery",
    "validate": "node scripts/validate-build.js",
    "test:cli": "node scripts/test-cli.js",
    "test:nango": "node scripts/debug-nango.js",
    "test:exa": "node scripts/test-exa-api.js",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:cli": "node dist/cli.js",
    "inspector": "npx @modelcontextprotocol/inspector dist/cli.js",
    "dev": "npx @smithery/cli@latest dev",
    "test": "npm run test:cli && npm run test:nango && npm run test:exa"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "axios": "^1.7.8",
    "dotenv": "^16.4.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}